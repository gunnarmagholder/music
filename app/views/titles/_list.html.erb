<% for title in @titles %>
  <tr>
	<% search_string = "/pieces?title_id=" + title.id.to_s %>
    <td><a href="<%= search_string %>"><%=h title.name %></a></td>
    <td align="right"><%=h title.occurences %></td>
	<% if current_user.role=="Admin" %>
      <td><%= link_to 'Show', title %></td>
      <td><%= link_to 'Edit', edit_title_path(title) %></td>
      <td><%= link_to 'Destroy', title, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>